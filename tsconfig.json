{
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "lib": [
        "dom",
        "es2015"
      ],
      "jsx": "react-jsx",
      "allowJs": true,  // This allows .js and .jsx files to be compiled
      "checkJs": false  // Optional: This prevents TypeScript from reporting type errors in your .js files
    }
  }
  